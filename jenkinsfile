pipeline {
    agent{ label 'grad_spc' }
    stages {
        stage('vcs') {
            steps{
                git branch: 'main',
                    url: 'https://github.com/archanaraj-m/dummyspring.git'
                    
            }
        }
        stage('package') {
            tools{
                jdk 'JDK_17_UBUNTU'
            }
            steps{
                sh 'mvn package'
            }
        }
        stage('Build'){
	        steps{
		      sh 'gradle build'
	        }
        }
        
    }
}