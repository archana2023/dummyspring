pipeline {
    agent{ label 'grad_spc' }
    stages {
        stage('vcs') {
            steps{
                git branch: 'main',
                    url: 'https://github.com/archanaraj-m/dummyspring.git'
                    
            }
        }
        stage ('package') {
            tools{
                jdk 'JDK_17_UBUNTU'
            }
        }
        stage('Build'){
	        steps{
		      sh 'gradle build'
	        }
        }
        stage('post-build') {
            steps {
                archiveArtifacts artifacts: '**/target/spring-petclinic-3.0.0-SNAPSHOT.jar',
                                 onlyIfSuccessful: true
                junit testResults: '**/TEST-*.xml'
            }
        }        

    }
}